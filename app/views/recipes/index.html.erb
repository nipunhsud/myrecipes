<h1 align="center">Listing all recipes</h1>
<hr />

<%= @recipes.each do |recipe| %>
    <div class="row">
        <div class="col-md-2">
            <section class="center">

            </section>    
        </div>
        <div class="col-md-8 well">
            <h4><%= recipe.name %></h4>
            <p><%= truncate(recipe.description, length:150) %></p>
        </div>
    </div>
    
<% end %>